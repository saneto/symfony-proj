<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" >
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" >
            <img src="http://kordouane.k.o.pic.centerblog.net/cbac2be3.png" width="100" height="60" alt="">
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('Front_suivi') }}">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('Front_FAQ') }}">FAQ</a>
                </li>

            </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

                <li class="nav-item">
                    <a class="nav-link btn btn-success" style="color: white;" href="{{ path('saisie_index') }}">Saisie <i class="fas fa-plus"></i></a>
                </li>
            </ul>
            {% if is_granted('ROLE_USER') == true %}
                <div class="form-inline my-4 my-lg-0">
                    <p>{{ app.user.email }}  &nbsp; <a href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i></a></p>
                </div>
            {% else %}
                <div class="form-inline my-2 my-lg-0">
                    <a type="button" class="btn btn-outline-success" href="{{ path('app_login') }}">Se connecter</a>
                </div>
            {% endif %}
        </div>

    </nav>
</head>
<body>
{% block body %}{% endblock %}
{% block Footer %}
    {% include('Layout/Footer.html.twig') %}
{% endblock %}


